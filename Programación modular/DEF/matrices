# matrices

matriz = [[0,2,4],[1,3,5],[6,8,10]]
print(matriz)
print(matriz[1]) # fila 1 
print(matriz[1][1]) # elemento fila 1 columna 1

def suma_fila (matriz, num_fila):
    suma = 0
    for i in matriz[num_fila]: # "para cada fila dentro de la matriz"
        suma = suma + i # sumo :)

    return suma 
print(suma_fila(matriz,1)) # suma elementos de la fila 2 (9)

def suma_matriz(matriz, resultado):
    # todo
    for i in matriz:
        for a in i:
            resultado += a
    return resultado

print(suma_matriz(matriz,1)) # suma todos los elementos 


